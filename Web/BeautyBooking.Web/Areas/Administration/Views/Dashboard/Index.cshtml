@using BeautyBooking.Common
@{
    this.ViewData["Title"] = "Админка";
}

<h3>Панель Админа</h3>
<p>Быстрая навигация:</p>
<div>

    <a asp-area="Administration" asp-controller="Categories" asp-action="Index"
       class="list-group-item list-group-item-action bg-light">Категории услуг</a>

    <dvi class="ml-5 my-2">
        <a class="btn btn-outline-info btn-sm" asp-area="Administration" asp-controller="Categories" asp-action="AddCategory">Добавить новую категорию услуг</a>
    </dvi>

    <a asp-area="Administration" asp-controller="Services" asp-action="Index"
       class="list-group-item list-group-item-action bg-light">Услуги</a>

    <div class="ml-5 my-2">
        <a class="btn btn-outline-info btn-sm" asp-area="Administration" asp-controller="Services" asp-action="AddService">Добавить новую услугу</a>
    </div>

    <a asp-area="Administration" asp-controller="Cities" asp-action="Index"
       class="list-group-item list-group-item-action bg-light">Города</a>

    <div class="ml-5 my-2">
        <a class="btn btn-outline-info btn-sm" asp-area="Administration" asp-controller="Cities" asp-action="AddCity">Добавить новый город</a>
    </div>

    <a asp-area="Administration" asp-controller="Salons" asp-action="Index"
       class="list-group-item list-group-item-action bg-light">Салоны</a>

    <div class="ml-5 my-2">
        <a class="btn btn-outline-info btn-sm" asp-area="Administration" asp-controller="Salons" asp-action="AddSalon">Добавить новый салон</a>
    </div>

    <a asp-area="Administration" asp-controller="Appointments" asp-action="Index"
       class="list-group-item list-group-item-action bg-light">Записи на услуги</a>
</div>